<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools">

    <data>
        <import type="com.hieu.lovecodinngapp.common.utils.RegexUtils"/>
        <variable
            name="viewModel"
            type="com.hieu.lovecodinngapp.features.auth.otp.OtpCodeViewModel" />
    </data>

    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        tools:context=".mvp.MainActivity">

        <TextView
            android:background="@color/colorAccent"
            android:id="@+id/textView"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="center"
            android:text="Welcome to TDD Testing!"
            app:layout_constraintLeft_toLeftOf="parent"
            app:layout_constraintRight_toRightOf="parent"
            app:layout_constraintTop_toTopOf="parent" />

        <EditText
            android:layout_marginHorizontal="10dp"
            android:padding="10dp"
            android:background="#D9E8D6"
            android:id="@+id/edtOtpCode"
            android:layout_width="match_parent"
            android:layout_height="50dp"
            android:hint="Enter your Email"
            android:singleLine="true"
            android:imeOptions="actionDone"
            android:layout_marginBottom="20dp"
            android:text="@={viewModel.otpCodeValue}"
            app:layout_constraintTop_toBottomOf="@+id/textView"
            app:layout_constraintBottom_toTopOf="@+id/btnSubmit"/>

        <Button
            android:id="@+id/btnSubmit"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="OTP Code"
            android:background="@drawable/border_button"
            android:layout_marginBottom="10dp"
            android:layout_marginHorizontal="10dp"
            app:layout_constraintBottom_toBottomOf="parent"
            android:enabled="@{viewModel.enable}"/>
    </androidx.constraintlayout.widget.ConstraintLayout>
</layout>